html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Music World
    link(rel="stylesheet", href="assets/css/index.css")

  body
    header
      nav
        .logo
          img(src="/image/Music.png", alt="Music Logo")
          h1 Vibess
        ul
          li: a(href="./index.html") Home
          li: a(href="./browse.html") Browse
          li: a(href="./playlist.html", id="playlist-link") Playlists
          li: a(href="#", id="register-link") Register
          li: a(href="#", id="about-link") About Us
          li: a(href="./dashboard.html") Dashboard

    section#home.hero
      .hero-content
        h2 Welcome to Music Vibess
        p Your destination for the latest music and news.
        a.btn(href="#music") Discover Music

